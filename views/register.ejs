<html>
    <head>
        <title>REGISTER</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
        <link href='https://fonts.googleapis.com/css?family=Baloo Tamma' rel='stylesheet'>
        <style>
            body
            {
                font-family: 'Baloo Tamma';font-size: 22px;
            }
            input
            {
                margin-top: 15px;
                border-radius: 10px;
                border: 2px solid black;
                font-size: 20px; 
                width: 320px;
                height: 40px;
            }
            button
            {
                margin-top: 10px;
                border-radius: 5px;
            }
        </style>
    </head>
    <body>
        <center style="top:50%; left:50%; transform:translate(-50%,-50%); position:absolute;">
            <form action='/register' method="POST">
                <p style="font-size: 40px;">Register</p>
                <br>
                <input name="name" type="text" placeholder="NAME">
                <br>
                <input name="email" type="email" placeholder="EMAIL">
                <br>
                <input name="phone" type="text" placeholder="PHONE">
                <br>
                <input id="pass" name="password" type="password" placeholder="PASSWORD">
                <br>
                <button type="submit" onclick="return validate()" class="btn-success">Register</button>
                <br><br>
                <p style="font-size: 15px;">Already Registered? <a href="/login">LogIn</a></p>
            </form>
        </center>
        <script>
            function validate()
            {
                var password = document.getElementById('pass').value;
                if(password.length<8)
                {
                    alert("password must contain 8 characters");
                    return false;
                }
            }
        </script>
    </body>
</html>