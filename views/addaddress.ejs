<html>
    <head>
        <title>ADD ADDRESS</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
        <link href='https://fonts.googleapis.com/css?family=Baloo Tamma' rel='stylesheet'>
        <style>
            body
            {
                font-family: 'Baloo Tamma';font-size: 22px;
            }
            input
            {
                margin-top: 15px;
                border-radius: 10px;
                border: 2px solid black; 
            }
            textarea
            {
                margin-top: 15px;
                border-radius: 10px;
                border: 2px solid black;
            }
            button
            {
                margin-top: 10px;
                border-radius: 5px;
            }
        </style>
    </head>
    <body>
        <center style="top:50%; left:50%; transform:translate(-50%,-50%); position:absolute;">
            <form action='/add/address' method="POST">
                <p style="font-size: 40px;">ADD ADDRESS</p>
                <br>
                <input name="name" type="text" placeholder="NAME">
                <br>
                <textarea name="address" type="text" placeholder="ADDRESS"></textarea>
                <br>
                <input name="phone" type="text" placeholder="PHONE">
                <br>
                <button type="submit" class="btn-success">ADD</button>
                <br>
            </form>
        </center>
    </body>
</html>